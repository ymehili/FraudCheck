# CheckGuard Production Environment Configuration
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Use strong, randomly generated passwords (minimum 32 characters)
POSTGRES_DB=checkguard_prod
POSTGRES_USER=checkguard_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Redis password (minimum 32 characters)
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD_MIN_32_CHARS

# ===========================================
# AWS CONFIGURATION
# ===========================================
# Use IAM role credentials in production when possible
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_ACCESS_KEY
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=checkguard-uploads-prod

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Clerk production keys (get from Clerk dashboard)
CLERK_SECRET_KEY=CHANGE_ME_CLERK_SECRET_KEY_sk_live_
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=CHANGE_ME_CLERK_PUB_KEY_pk_live_

# JWT secret for internal authentication (minimum 64 characters, cryptographically random)
JWT_SECRET=CHANGE_ME_JWT_SECRET_MIN_64_CHARS_RANDOM

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Frontend public URLs (use your actual domain)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://app.yourdomain.com

# CORS allowed origins (comma-separated, no spaces)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO
SENTRY_DSN=CHANGE_ME_SENTRY_DSN_IF_USING

# ===========================================
# SECURITY HEADERS & FEATURES
# ===========================================
SECURE_COOKIES=true
HTTPS_ONLY=true
HSTS_MAX_AGE=31536000

# ===========================================
# GEMINI API CONFIGURATION
# ===========================================
GEMINI_API_KEY=CHANGE_ME_GEMINI_API_KEY

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================
BACKUP_ENCRYPTION_KEY=CHANGE_ME_BACKUP_ENCRYPTION_KEY_32_CHARS
MAINTENANCE_MODE=false

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_REQUEST=5

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Generate all passwords using: openssl rand -base64 32
# 2. Generate JWT secret using: openssl rand -hex 64
# 3. Use environment-specific values for all URLs
# 4. Never use default or example values in production
# 5. Rotate secrets regularly (quarterly recommended)
# 6. Use AWS IAM roles instead of access keys when possible
# 7. Enable AWS CloudTrail and GuardDuty for monitoring
# 8. Configure proper backup retention policies
