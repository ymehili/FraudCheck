# Production Environment Configuration Template
# Copy this file to .env.production and fill in actual values

# Environment
NODE_ENV=production

# Database (RDS PostgreSQL)
DATABASE_URL=postgresql+asyncpg://checkguard:REPLACE_WITH_RDS_PASSWORD@REPLACE_WITH_RDS_ENDPOINT:5432/checkguard

# AWS Configuration (Real AWS Services)
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_ACCESS_KEY
AWS_REGION=us-east-1
S3_BUCKET_NAME=checkguard-ai-uploads-prod
# Remove AWS_ENDPOINT_URL for production (uses real AWS services)

# Clerk Authentication (Production Keys)
CLERK_SECRET_KEY=REPLACE_WITH_PRODUCTION_CLERK_SECRET_KEY
CLERK_PUBLISHABLE_KEY=REPLACE_WITH_PRODUCTION_CLERK_PUBLISHABLE_KEY

# Gemini API (Production Key)
GEMINI_API_KEY=REPLACE_WITH_PRODUCTION_GEMINI_API_KEY

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=CheckGuard AI

# CORS (Production Domains)
ALLOWED_ORIGINS=["https://your-production-domain.com", "https://checkguard-alb-endpoint.amazonaws.com"]

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "application/pdf"]

# Security (Generate strong production secrets)
DEBUG=false
SECRET_KEY=REPLACE_WITH_STRONG_PRODUCTION_SECRET_KEY
ALGORITHM=HS256

# Redis Configuration (ElastiCache or ECS Redis)
REDIS_HOST=REPLACE_WITH_REDIS_ENDPOINT
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://REPLACE_WITH_REDIS_ENDPOINT:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://REPLACE_WITH_REDIS_ENDPOINT:6379/0
CELERY_RESULT_BACKEND=redis://REPLACE_WITH_REDIS_ENDPOINT:6379/1

# ClamAV Configuration (for ECS deployment)
CLAMD_HOST=clamd
CLAMD_PORT=3310
CLAMD_SOCKET_PATH=/tmp/clamd.sock
CLAMD_TIMEOUT=30
CLAMD_USE_UNIX_SOCKET=true

# ECS Specific
ECS_CLUSTER_NAME=checkguard-cluster
ECS_SERVICE_NAME=checkguard-backend-service

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=REPLACE_WITH_SENTRY_DSN_IF_USING

# Frontend Environment Variables (to be set in frontend service)
NEXT_PUBLIC_API_URL=https://REPLACE_WITH_ALB_ENDPOINT
NEXT_PUBLIC_API_BASE_URL=https://REPLACE_WITH_ALB_ENDPOINT
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=REPLACE_WITH_PRODUCTION_CLERK_PUBLISHABLE_KEY

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# Auto-scaling Configuration
MIN_CAPACITY=2
MAX_CAPACITY=10
TARGET_CPU_UTILIZATION=70

# Backup Configuration
BACKUP_RETENTION_DAYS=30
ENABLE_POINT_IN_TIME_RECOVERY=true

# Security Configuration
ENABLE_WAF=true
ENABLE_CLOUDTRAIL=true
ENABLE_VPC_FLOW_LOGS=true